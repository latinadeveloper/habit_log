Activity Log for <%= @habit.title %> Habit desired: <%= @habit.description %>


<form action="/habits/<%=@habit.id%>/activity" method="POST">

<br><br>
<label for="date">date</label>
<input id="date" type="date" name="activity_log[date]">

------

<label for="daily_comment">Today's Comment</label>
<textarea id="daily_comment" type="text" name="activity_log[daily_comment]">
</textarea>

----

<label for="completed">did today</label>
<input type="hidden" name="activity_log[completed]" value="false">
<input id="completed" type="checkbox" name="activity_log[completed]" value="true">


<input type="submit" value="todays activity">
</form>

<br><br><br>

 <% @habit.activity_logs.each do |activity| %>
   <%= activity.date.strftime("%A %B %-d") %> --- <%= activity.daily_comment %>

